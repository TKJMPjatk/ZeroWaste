@using ZeroWaste.Data.ViewModels.ShoppingList
@model EditQuantityVM
@{
    ViewData["Title"] = "Edycja ilości";
}
<div class="col-md-10 offset-1">
    <h3>Edycja ilości</h3>
    <div class="col-md-8 offset-4">
        <form asp-controller="ShoppingListIngredient">
            @for (int i = 0; i < @Model.IngredientsToEditQuantity.Count(); i++)
            {
                <div class="row">
                    <div class="col-md-4">
                        @Model.IngredientsToEditQuantity[i].Ingredient.Name
                    </div>
                    <div class="col-md-4">
                        <input type="number" class="form-control" asp-for="IngredientsToEditQuantity[i].Quantity"/>
                    </div>
                    <div class="col-md-4">
                        @Model.IngredientsToEditQuantity[i].Ingredient.UnitOfMeasure.Name
                    </div>
                </div>
            }
            <div class="text-right">
                <input type="submit" class="btn btn-dark" value="Add"/>
            </div>
        </form>
    </div>
</div>