@using ZeroWaste.Data.ViewModels.ShoppingList
@model EditQuantityVM
@{
    ViewData["Title"] = "Edycja ilości";
}
<div class="col-md-10 offset-1">
    <div class="row">
        <div class="col-md-4 offset-4 text-center">
            <h3>Edycja ilości</h3>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-8 offset-2">
            <form asp-controller="ShoppingListIngredients" asp-action="EditQuantity" id="test1">
                @for (int i = 0; i < @Model.IngredientsToEditQuantity.Count(); i++)
                {
                    <div class="row">
                        <div class="col-md-4">
                            <h5>@Model.IngredientsToEditQuantity[i].Ingredient.Name</h5>
                        </div>
                        <div class="col-md-4">
                            <input type="number" class="form-control" asp-for="IngredientsToEditQuantity[i].Quantity" id=@i/>
                        </div>
                        <div class="col-md-4">
                            @Model.IngredientsToEditQuantity[i].Ingredient.UnitOfMeasure.Name
                        </div>
                    </div>
                    <hr/>
                    <input type="number" asp-for="@Model.IngredientsToEditQuantity[i].Id" style="visibility: hidden" value="@Model.IngredientsToEditQuantity[i].Id"/>
                }
                <div class="row">
                    <div class="col-md-9">
                        <input type="number" asp-for="@Model.ShoppingListId" style="visibility: hidden" value="@Model.ShoppingListId"/>
                    </div>
                    <div class="col-md-3">
                        <input type="submit" class="btn btn-dark" value="Zatwierdź"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>