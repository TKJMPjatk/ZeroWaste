@using ZeroWaste.Data.ViewModels.AutomatedShoppingList;
@model AddedShoppingListVm
@section Scripts
{
    <script>
        var val = confirm("Przenieść cię do listy zakupów?");
        if (val === true){
            window.location.href = "@Url.Action("Edit", "ShoppingLists", new {id = @Model.AddedShoppingListId})";
        }
        else{
            window.location.href = "@Url.Action("Details", "Recipes", new {id = @Model.RecipeId})";
        }
    </script>
}