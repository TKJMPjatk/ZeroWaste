@using ZeroWaste.Models
@model IEnumerable<Ingredient>

@{
    ViewData["Title"] = "Lista składników";
}
<div class="col-md-10 offset-1">
    <div class="row">
        <div class="col-md-8">
            <h3>Produkty</h3>
        </div>
        <div class="col-md-4">
            <form asp-controller="Ingredients" asp-action="Index">
                <div class="row">
                    <div class="col-md-10">
                        <input name="searchString" type="text" class="form-control" placeholder="Szukaj składnika..." aria-label="Recipient's username" aria-describedby="button-addon2">
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <br/>
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.UnitOfMeasure.Shortcut)</th>
                    <th>@Html.DisplayNameFor(model => model.IngredientType.Name)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td >
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td >
                        @Html.DisplayFor(modelItem => item.UnitOfMeasure.Shortcut)
                    </td>
                    <td >
                        @Html.DisplayFor(modelItem => item.IngredientType.Name)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-add">Dodaj</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
