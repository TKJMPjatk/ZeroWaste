@model SearchByIngredientsVm
@using ZeroWaste.Data.ViewModels.Recipes;
@{
    ViewData["Title"] = "Search by ingredients";
}
<div class="col-md-10 offset-1">
    <div class="row">
        <div class="col-md-5">
            <h3>Wyszukiwanie po składnikach</h3>
        </div>
        <div class="col-md-3 offset-2">
            <input class="input-search" type="text" placeholder="Wpisz szukaną frazę"/>
        </div>
    </div>
    <div class="col-md-6">
        
        <div class="row">
            <div class="col-md-3">
                <a class="btn btn-search">Edytuj składniki</a>
            </div>
            <div class="col-md-3">
                <a class="btn btn-search">Sortowanie</a>
            </div>
            <div class="col-md-3">
                <a class="btn btn-search">Kategoria</a>
            </div>
        </div>
    </div>
</div>