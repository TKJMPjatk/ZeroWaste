@using ZeroWaste.Data.ViewModels.Recipes;
@model SearchByIngredientsVm
@{
    ViewData["Title"] = "Search by ingredients";
}
<div class="col-md-10 offset-1">
    <div class="row">
        <div class="col-md-5">
            <h3>@ViewBag.Title</h3>
        </div>
        <div class="col-md-3 offset-2">
            <input class="input-search" type="text" placeholder="Wpisz szukaną frazę"/>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-3">
                <a class="btn btn-search">Edytuj składniki</a>
            </div>
            <div class="col-md-3">
                <a class="btn btn-search">Sortowanie</a>
            </div>
            <div class="col-md-3">
                <a class="btn btn-search">Kategoria</a>
            </div>
        </div>
    </div>
    <br/>
    <div class="row">
        @for (int i = 0; i < 6; i++)
        {
            <div class="col-md-3 col-xs-6 mb-3">
                <div class="card mb-3" style="max-width: 540px">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header bg-recipe-card">
                                <img src="https://polki.pl/foto/4_3_LARGE/pilau-odswietna-potrawa-1661952.webp" width="100%" alt="Potrawa"/>
                            </div>
                            <div class="card-body bg-recipe-card">
                                <h5 class="card-title">Potrawa z kurczaka</h5>
                                <p class="card-text">1 godzina</p>
                                <hr/>
                                <p class="card-text">Składnik 1</p>
                                <p class="card-text">Składnik 2</p>
                                <p class="card-text">Składnik 3</p>
                                <hr/>
                                <div class="row">
                                    <div class="col-md-6">
                                        <a class="btn btn-recipe-option">Koszyk</a>
                                    </div>
                                    <div class="col-md-6">
                                        <a class="btn btn-recipe-option">Koszyk</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>