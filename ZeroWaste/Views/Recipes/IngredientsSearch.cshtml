@{
    ViewData["Title"] = "Search by ingredients";
}
<div class="view-search">
    <div class="col-md-4 offset-4">
        <div class="row">
            <div class="text-center">
                <h3>Wyszukaj przepis</h3>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-6">
                <input type="text" placeholder="składnik"/>
            </div>
            <div class="col-md-2">
                <input type="number" placeholder="ilość"/>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-add float-end">Dodaj</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 offset-3">
        <div class="row">
            <div class="text-center">
                <p>Składnik</p>
            </div>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Produkt</th>
                        <th>Ilość</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>1</th>
                        <td>Kurczak</td>
                        <td>1 Kg</td>
                    </tr>
                    <tr>
                        <th>2</th>
                        <td>Kurczak</td>
                        <td>1 Kg</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>